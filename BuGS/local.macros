        macro
        _spriteHeader
        sei
        tsc
        sta backupStack
        lda $e1c068      ; Direct Page and Stack in Bank 01/
        ora #$0030
        sta $e1c068
        clc
        txa
        tcs
        mend

        macro
        _spriteFooter
        lda $e1c068
        and #$ffcf
        sta $e1c068
        lda backupStack
        tcs
        cli
        mend
