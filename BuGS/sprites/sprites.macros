        macro
        _collision &mask,&addr
        ldy collision
        bne _alreadyCollided_&SYSCNT
        tax
        and &mask
        beq _noCollision_&SYSCNT
        sta collision
        tsc
        clc
        adc &addr
        sta collisionAddr
_noCollision_&SYSCNT anop
        txa
_alreadyCollided_&SYSCNT anop
        mend
